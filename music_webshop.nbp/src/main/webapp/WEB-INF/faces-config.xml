<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
  
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goToAdminPage</from-outcome>
            <to-view-id>/admin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>loginFailed</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>toRegister</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>refreshpage</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/viewCart.xhtml</from-view-id>
        <from-view-id>/viewCart.xhtml</from-view-id>
        <from-view-id>/viewCart.xhtml</from-view-id>
        <from-view-id>/viewCart.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>emptyCart</from-outcome>
            <to-view-id>/viewCart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>removeOneProduct</from-outcome>
            <to-view-id>/viewCart.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToConfirm</from-outcome>
            <to-view-id>/confirm.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToAdminPage</from-outcome>
            <to-view-id>/admin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>toRegister</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>loginFailed</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>refreshpage</from-outcome>
            <to-view-id>/viewCart.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/shop.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>buyProduct</from-outcome>
            <to-view-id>/shop.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToAdminPage</from-outcome>
            <to-view-id>/admin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>toRegister</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>loginFailed</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>refreshpage</from-outcome>
            <to-view-id>/shop.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/confirm.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goToAdminPage</from-outcome>
            <to-view-id>/admin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>toRegister</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect />
        </navigation-case>
                <navigation-case>
            <from-outcome>refreshpage</from-outcome>
            <to-view-id>/confirm.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/admin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>toRegister</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect />
        </navigation-case>
                <navigation-case>
            <from-outcome>refreshpage</from-outcome>
            <to-view-id>/about.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/about.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goToAdminPage</from-outcome>
            <to-view-id>/admin.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>toRegister</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>loginFailed</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>refreshpage</from-outcome>
            <to-view-id>/about.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goHome</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>loginFailed</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>refreshpage</from-outcome>
            <to-view-id>/register.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
</faces-config>
