<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <managed-bean>
        <managed-bean-name>shoppingCartModelBean</managed-bean-name>
        <managed-bean-class>com.chalmers.beans.ShoppingCartModelBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>shopBackingBean</managed-bean-name>
        <managed-bean-class>com.chalmers.beans.ShopBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>payBackingBean</managed-bean-name>
        <managed-bean-class>com.chalmers.beans.PayBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>viewCartBackingBean</managed-bean-name>
        <managed-bean-class>com.chalmers.beans.ViewCartBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>confirmBackingBean</managed-bean-name>
        <managed-bean-class>com.chalmers.beans.ConfirmBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>shopControllerBean</managed-bean-name>
        <managed-bean-class>com.chalmers.beans.ShopControllerBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>cart</property-name>
            <property-class>com.chalmers.beans.ShoppingCartModelBean</property-class>
            <value>#{cartBean}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>viewCartControllerBean</managed-bean-name>
        <managed-bean-class>com.chalmers.beans.ViewCartControllerBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
